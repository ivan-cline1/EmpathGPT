{ 
  "name": "EmpathGPT",
  "manifest_version": 3,
  "version": "0.1",
  "background": {
    "service_worker": "worker.js"
  },
  
  "action": {
    "default_title": "Offscreen Example",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["face-api.min.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["/models/*"],
      "matches": ["<all_urls>"]
    }],
  "permissions": ["offscreen","storage","activeTab","contentSettings","scripting"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}

